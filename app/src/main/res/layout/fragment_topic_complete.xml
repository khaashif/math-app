<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/glowLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical"
    android:tag="layout/fragment_topic_complete_0">

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:id="@+id/levelSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="4"
        android:background="@color/testWhite"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="visible">

        <ProgressBar
            android:id="@+id/xpBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_margin="10dp"
            android:layout_weight="0.1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="center"
            android:max="100"
            android:progress="25"
            android:textColor="#000000"
            android:textSize="40sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/xpLvlCompleted"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/xpNoHint"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/xpNoAns"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/xpIncorrectAttempts"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/xpTotal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="left|center_vertical|center_horizontal|center"
            android:paddingLeft="5dp"
            android:text="0"
            android:textColor="#000000"
            android:textSize="50sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/leaderboardButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_play"
                android:elevation="6dp"
                android:foreground="@drawable/ripple_keyboard"
                android:gravity="center"
                android:padding="10dp"
                android:text="��"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/nextButton"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_play"
                android:elevation="6dp"
                android:foreground="@drawable/ripple_keyboard"
                android:gravity="center"
                android:padding="10dp"
                android:text="&gt;"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/topicSummary"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:layout_weight="0"
        android:background="@color/testWhite"
        android:elevation="3dp"
        android:orientation="vertical"
        android:visibility="invisible">

        <ProgressBar
            android:id="@+id/topicProgressBar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tokens"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tokens obtained: 1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <Button
                android:id="@+id/leaderboardButton2"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_play"
                android:elevation="6dp"
                android:foreground="@drawable/ripple_keyboard"
                android:gravity="center"
                android:padding="10dp"
                android:text="��"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5" />

            <Button
                android:id="@+id/nextButton1"
                android:layout_width="0dp"
                android:layout_height="70dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@drawable/button_play"
                android:elevation="6dp"
                android:foreground="@drawable/ripple_keyboard"
                android:gravity="center"
                android:padding="10dp"
                android:text="&gt;"
                android:textColor="@color/black"
                android:textSize="40sp"
                android:textStyle="bold" />

            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />
        </LinearLayout>
    </LinearLayout>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>