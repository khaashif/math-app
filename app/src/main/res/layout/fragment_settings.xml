<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/testWhite"
    android:orientation="vertical"
    android:tag="layout/fragment_settings_0">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/settings"
        android:layout_width="200dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1"
        app:lottie_autoPlay="true"
        app:lottie_fileName="settings.json"
        app:lottie_loop="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:layout_weight="1.2"
        android:orientation="vertical">

        <Button
            android:id="@+id/colorButton"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="6dp"
            android:fontFamily="sans-serif-condensed-light"
            android:foreground="@drawable/ripple_keyboard"
            android:gravity="center"
            android:text="Colour"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <Button
            android:id="@+id/music"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="6dp"
            android:fontFamily="sans-serif-condensed-light"
            android:foreground="@drawable/ripple_keyboard"
            android:gravity="center"
            android:text="Music"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <Button
            android:id="@+id/sound"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="6dp"
            android:fontFamily="sans-serif-condensed-light"
            android:foreground="@drawable/ripple_keyboard"
            android:text="Sound"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <Button
            android:id="@+id/vibration"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="6dp"
            android:fontFamily="sans-serif-condensed-light"
            android:foreground="@drawable/ripple_keyboard"
            android:text="Vibration"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45sp" />

        <Button
            android:id="@+id/restart"
            android:layout_width="275dp"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@null"
            android:elevation="6dp"
            android:fontFamily="sans-serif-condensed-light"
            android:foreground="@drawable/ripple_keyboard"
            android:text="Restart"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="45sp"
            android:textStyle="normal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:orientation="vertical">

        <Button
            android:id="@+id/privacyPolicy"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="2"
            android:background="@null"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="bottom|center_vertical|center_horizontal|center"
            android:text="Privacy Policy"
            android:textColor="@color/defaultGrey"
            app:autoSizeMaxTextSize="20sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
             />

        <TextView
            android:id="@+id/ZE"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed-light"
            android:gravity="top|center_vertical|center_horizontal|center"
            android:text="Zest Editions Ltd"
            android:textColor="@color/defaultGrey"
            app:autoSizeMaxTextSize="15sp"
            app:autoSizeMinTextSize="10sp"
            app:autoSizeStepGranularity="1sp"
             />
    </LinearLayout>

    <com.google.android.gms.ads.AdView
        android:id="@+id/adView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        app:adSize="BANNER"
        app:adUnitId="ca-app-pub-4385048141375400/2582048698" />
</LinearLayout>