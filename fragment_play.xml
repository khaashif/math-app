                        android:fontFamily="sans-serif-condensed-light"
                        android:foreground="@drawable/ripple_keyboard"
                        android:text="@string/answer"
                        android:textAllCaps="false"
                        android:textSize="20sp"
                        android:visibility="invisible" />

                </LinearLayout>
